<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="DuplicateCrowdInStrings">
    <style name="Base.Theme.Dark.Black" parent="Base.Theme.Dark">
        <item name="android:colorBackground">@android:color/black</item>
        <item name="colorSurface">@android:color/black</item>
        <item name="colorSurfaceContainer">@android:color/black</item>
        <item name="colorSurfaceContainerLow">@android:color/black</item>
        <item name="colorSurfaceContainerHigh">@android:color/black</item>
        <item name="colorSurfaceContainerHighest">@android:color/black</item>
        <item name="appBarColor">@android:color/black</item>

        <!-- Specific overrides for black theme -->
        <item name="currentDeckBackgroundColor">#1a1a1a</item> <!-- very dark grey -->
        <item name="focusedRowBackgroundColor">#1a1a1a</item> <!-- very dark grey -->
        <item name="alternativeBackgroundColor">#0C0C0C</item> <!-- very dark grey -->
        <item name="toolbarBackgroundColor">@android:color/black</item>
        <item name="editTextBackgroundColor">#1C1C1C</item> <!-- very dark grey -->

        <!-- Images -->
        <item name="navDrawerImage">@drawable/nav_drawer_logo_black_theme</item>

        <!-- Card-->
        <item name="cardViewStyle">@style/BlackCardBackground</item>

        <!-- Dialogs -->
        <item name="dialogBackground">@android:color/black</item>
        <item name="popupBackgroundColor">@android:color/black</item>
        <item name="alertDialogTheme">@style/ThemeOverlay.AnkiDroid.AlertDialog.Black</item>

        <!-- FAB -->
        <item name="fab_normal">?attr/colorPrimaryContainer</item>
        <item name="fab_pressed">?attr/colorPrimary</item>
        <item name="fab_labelsTextColor">?attr/colorOnPrimaryContainer</item>

        <item name="buryCountColor">@color/disabled_gray_dark</item>
        <item name="zeroCountColor">#202020</item>
    </style>

    <style name="BlackCardBackground" parent="CardView">
        <item name="cardBackgroundColor">#151515</item> <!-- very dark grey -->
    </style>

    <style name="ThemeOverlay.AnkiDroid.AlertDialog.Black" parent="ThemeOverlay.AnkiDroid.AlertDialog">
        <item name="android:background">@android:color/black</item>
    </style>

    <style name="Theme.Dark.Black" parent="Base.Theme.Dark.Black" />
</resources>