<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="DuplicateCrowdInStrings">
    <color name="theme_plain_primary">#9E9E9E</color>
    <color name="theme_plain_primary_dark">#616161</color>
    <color name="theme_plain_primary_light">#F5F5F5</color>
    <color name="theme_plain_accent">#607D8B</color>
    <color name="theme_plain_primary_text">#212121</color>

    <style name="Base.Theme.Light.Plain" parent="Base.Theme.Light">
        <!-- Plain theme uses a static grey color scheme -->
        <item name="colorPrimary">@color/theme_plain_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/theme_plain_primary_light</item>
        <item name="colorOnPrimaryContainer">@color/theme_plain_primary_text</item>

        <item name="colorSecondary">@color/theme_plain_accent</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/theme_plain_primary_light</item>
        <item name="colorOnSecondaryContainer">@color/theme_plain_primary_text</item>

        <item name="colorTertiary">@color/theme_plain_accent</item>
        <item name="colorOnTertiary">@color/white</item>
        <item name="colorTertiaryContainer">@color/theme_plain_primary_light</item>
        <item name="colorOnTertiaryContainer">@color/theme_plain_primary_text</item>

        <item name="colorError">@color/theme_plain_primary_dark</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorErrorContainer">@color/theme_plain_primary_light</item>
        <item name="colorOnErrorContainer">@color/theme_plain_primary_text</item>

        <item name="android:colorBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/theme_plain_primary_text</item>
        <item name="colorSurfaceVariant">@color/theme_plain_primary_light</item>
        <item name="colorOnSurfaceVariant">@color/theme_plain_primary_text</item>

        <item name="outline">@color/theme_plain_primary</item>

        <!-- The original plain theme had specific button drawables -->
        <item name="againButtonRef">@drawable/footer_button_all_plain</item>
        <item name="hardButtonRef">@drawable/footer_button_all_plain</item>
        <item name="goodButtonRef">@drawable/footer_button_all_plain</item>
        <item name="easyButtonRef">@drawable/footer_button_all_plain</item>
        <item name="againButtonRippleRef">@drawable/footer_button_all_plain_ripple</item>
        <item name="hardButtonRippleRef">@drawable/footer_button_all_plain_ripple</item>
        <item name="goodButtonRippleRef">@drawable/footer_button_all_plain_ripple</item>
        <item name="easyButtonRippleRef">@drawable/footer_button_all_plain_ripple</item>

        <item name="fab_normal">@color/theme_plain_accent</item>
        <item name="fab_pressed">@color/theme_plain_accent</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/theme_plain_primary</item>
    </style>

    <style name="Theme.Light.Plain" parent="Base.Theme.Light.Plain"/>
</resources>