<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="DuplicateCrowdInStrings">
    <style name="Base.Theme.Light" parent="@style/Theme.Material3.Light.NoActionBar">
        <!-- Android colors -->
        <item name="colorAccent">?attr/colorPrimary</item>

        <item name="colorSurfaceContainerHighest">?attr/colorSurfaceContainer</item>
        <item name="colorSurfaceContainerHigh">?android:attr/colorBackground</item>
        <item name="colorSurfaceContainer">?attr/colorSurfaceVariant</item>
        <item name="colorSurfaceContainerLow">?android:attr/colorBackground</item>

        <item name="android:textColor">@color/text_color_light</item>
        <item name="android:textColorSecondary">@color/text_color_secondary_light</item>
        <item name="preferenceCategoryTitleTextColor">?attr/colorPrimary</item>
        <!-- Widget colors -->
        <item name="widgetColorActivated">?attr/colorPrimary</item>
        <!-- Navigation drawer theme -->
        <item name="navDrawerItemColor">?attr/colorOnSurfaceVariant</item>
        <item name="navDrawerItemBackgroundColor">@drawable/drawer_item_background_light</item>
        <!-- Menu -->
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>
        <item name="popupMenuStyle">@style/PopupMenuStyle</item>
        <item name="spinnerStyle">@style/SpinnerStyle</item>
        <!-- Action bar styles -->
        <item name="appBarColor">?attr/colorSurface</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionBarTextColor">?attr/colorOnSurface</item>
        <item name="actionBarPopupTextColor">?attr/colorOnSurface</item>
        <item name="actionModeBackground">?attr/colorSurface</item>
        <!-- Tab layout -->
        <item name="tabLayoutBackgroundColor">?attr/colorSurface</item>
        <item name="tabActiveIconColor">?attr/colorPrimary</item>
        <!-- Deck list colors and divider -->
        <item name="currentDeckBackground">@drawable/item_background_selected</item>
        <item name="currentDeckBackgroundColor">?attr/colorSecondaryContainer</item>
        <item name="focusedRowBackgroundColor">?attr/colorSecondaryContainer</item>
        <item name="dynDeckColor">?attr/colorPrimary</item>
        <item name="deckDivider">@drawable/divider</item>
        <item name="expandRef">@drawable/ic_chevron_right_black</item>
        <item name="collapseRef">@drawable/ic_expand_more_black_24dp</item>
        <!-- Count colors -->
        <item name="newCountColor">?attr/colorPrimary</item>
        <item name="learnCountColor">?attr/colorError</item>
        <item name="reviewCountColor">?attr/colorTertiary</item>
        <item name="buryCountColor">?attr/colorOnSurfaceVariant</item>
        <item name="zeroCountColor">?attr/colorOnSurfaceVariant</item>
        <!-- Study Screen colors -->
        <item name="againButtonBackground">?attr/colorError</item>
        <item name="hardButtonBackground">?attr/colorSecondary</item>
        <item name="goodButtonBackground">?attr/colorTertiary</item>
        <item name="easyButtonBackground">?attr/colorPrimary</item>
        <item name="topBarColor">?attr/colorSurface</item>
        <item name="maxTimerColor">?attr/colorError</item>
        <item name="answerButtonTextColor">?attr/colorOnError</item>
        <item name="againButtonTextColor">?attr/colorOnError</item>
        <item name="hardButtonTextColor">?attr/colorOnSecondary</item>
        <item name="goodButtonTextColor">?attr/colorOnTertiary</item>
        <item name="easyButtonTextColor">?attr/colorOnPrimary</item>

        <item name="alternativeBackgroundColor">?attr/colorSurfaceVariant</item>
        <item name="againTextColor">?attr/colorError</item>
        <item name="hardTextColor">?attr/colorSecondary</item>
        <item name="goodTextColor">?attr/colorTertiary</item>
        <item name="easyTextColor">?attr/colorPrimary</item>
        <item name="againBackgroundColor">?attr/colorErrorContainer</item>
        <item name="hardBackgroundColor">?attr/colorSecondaryContainer</item>
        <item name="goodBackgroundColor">?attr/colorTertiaryContainer</item>
        <item name="easyBackgroundColor">?attr/colorPrimaryContainer</item>
        <!-- Study Screen button drawables -->
        <item name="showAnswerButtonBackground">?attr/colorPrimary</item>
        <item name="showAnswerColor">?attr/colorPrimary</item>
        <item name="againButtonRef">@drawable/footer_button_again</item>
        <item name="hardButtonRef">@drawable/footer_button_hard</item>
        <item name="goodButtonRef">@drawable/footer_button_good</item>
        <item name="easyButtonRef">@drawable/footer_button_easy</item>
        <item name="againButtonRippleRef">@drawable/footer_button_ripple</item>
        <item name="hardButtonRippleRef">@drawable/footer_button_ripple</item>
        <item name="goodButtonRippleRef">@drawable/footer_button_ripple</item>
        <item name="easyButtonRippleRef">@drawable/footer_button_ripple</item>
        <!-- Card Browser Colors -->
        <item name="cardBrowserDivider">?attr/outline</item>
        <!-- Browser colors -->
        <item name="suspendedColor">?attr/colorErrorContainer</item>
        <item name="buriedColor">?attr/colorSecondaryContainer</item>
        <item name="selectedColor">?attr/colorPrimaryContainer</item>
        <item name="markedColor">?attr/colorTertiaryContainer</item>
        <!-- Note editor colors -->
        <item name="duplicateColor">?attr/colorError</item>
        <item name="editTextBackgroundColor">?attr/colorSurfaceVariant</item>
        <item name="toolbarBackgroundColor">?attr/colorSurface</item>
        <item name="toolbarIconColor">?attr/colorOnSurface</item>
        <item name="buttonShadowColor">@android:color/transparent</item>
        <item name="buttonRippleColor">?attr/colorOnSurface</item>
        <item name="buttonForegroundColor">?attr/colorSurface</item>
        <!-- FAB -->
        <item name="fab_normal">?attr/colorPrimaryContainer</item>
        <item name="fab_pressed">?attr/colorPrimary</item>
        <item name="fab_labelsTextColor">?attr/colorOnPrimaryContainer</item>
        <item name="fab_item_background">@drawable/fab_label_background</item>
        <!-- Images -->
        <item name="navDrawerImage">@drawable/nav_drawer_logo</item>
        <!-- Dialog styles -->
        <item name="android:listPreferredItemHeight">56dip</item>
        <item name="textAllCaps">false</item>
        <!--Custom Tabs colors-->
        <item name="popupBackgroundColor">?attr/colorSurface</item>
        <item name="overflowAndPopupMenuIconColor">?attr/colorOnSurfaceVariant</item>
        <!-- StatusBar and Navbar for Edge-to-Edge -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@android:color/transparent</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="editTextDisabled">@color/disabled_gray_light</item>

        <!-- Snackbar. Attributes snackbarStyle, snackbarTextViewStyle and snackbarButtonStyle
             must be *all* present in a theme (or its parent) in order for the snackbar
             to pick up the proper layout that uses these attributes. -->
        <item name="snackbarStyle">@style/SnackbarStyle</item>
        <item name="snackbarTextViewStyle">@style/Widget.MaterialComponents.Snackbar.TextView</item>
        <item name="snackbarButtonStyle">@style/SnackbarButtonStyle</item>
        <item name="snackbarBackgroundTintColor">?attr/colorSurfaceVariant</item>
        <item name="snackbarButtonTextColor">?attr/colorPrimary</item>

        <!-- Introduction -->
        <item name="introductionLogoTransparent">#99FFFFFF</item>

        <!-- Widget styles -->
        <item name="switchPreferenceCompatStyle">@style/Preference.SwitchPreferenceCompat.Material3</item>
        <item name="sliderStyle">@style/SliderStyle</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.AnkiDroid</item>
        <item name="alertDialogTheme">@style/ThemeOverlay.AnkiDroid.AlertDialog</item>

        <!-- ProgressDialog-->
        <item name="dialogBackground">?attr/colorSurface</item>

        <item name="checkMediaListBackground">?attr/colorSurfaceVariant</item>
        <item name="checkMediaListForeground">?attr/colorOnSurfaceVariant</item>
        <item name="progressDialogButtonTextColor">?attr/colorPrimary</item>
        <item name="tabStyle">@style/Widget.MaterialComponents.TabLayout</item>

        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.App.BottomSheetDialog</item>
    </style>

    <style name="Theme.Light" parent="Base.Theme.Light" />
</resources>
